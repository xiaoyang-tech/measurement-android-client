<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:paddingTop="5dip"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <cn.xymind.healthdetection.synthesis.androidsdksamples.ItemScoreView
                        android:id="@+id/v_standard_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="#EBEFF2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:text="生理指标"
                            android:textColor="#ff4d4d4d"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/segmentsMirrorLl"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_xl"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="心率" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_jsyl"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="心率变异性" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_ssy"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="收缩压" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_szy"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="舒张压" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_tzzs"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="体重指数" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_pfnl"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="皮肤年龄" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_xggn"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="血管功能" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_xzyl"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="心脏压力" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/calculated"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="精神压力" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_xzbfx"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="心脏病风险" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_zffx"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="中风风险" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/v_xxgbfx"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="心血管病风险" />

                        <cn.xymind.healthdetection.synthesis.androidsdksamples.SegmentScoreMirrorView
                            android:id="@+id/spo2Ssmv"
                            style="@style/measure_result_mirror"
                            android:layout_width="match_parent"
                            android:layout_margin="7dp"
                            app:left_title="血氧含量" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:background="@drawable/shape_round_rectangle_background3"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/isAfIv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_tizz" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/atrialFibrillationTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginTop="6dip"
                                    android:layout_marginRight="6dip"
                                    android:text="0"
                                    android:textColor="#2E2E2E"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/isAfTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dip"
                                    android:text="房颤"
                                    android:textColor="#2E2E2E"
                                    android:textSize="16sp" />


                                <cn.xymind.healthdetection.synthesis.androidsdksamples.IndicatorMirrorView
                                    android:id="@+id/Idv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:visibility="invisible" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>